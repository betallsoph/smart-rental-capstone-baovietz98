actor "Admin" as Admin
actor "Cloudinary" as Cloud <<external>>

' System Boundary
rectangle "Smart Rental System - Other Modules" {

  package "Tenant Management" {
    usecase "UC-52\nCreate Tenant" as UC52
    usecase "UC-53\nView Tenants" as UC53
    usecase "UC-54\nView Tenant Detail" as UC54
    usecase "UC-55\nUpdate Tenant" as UC55
    usecase "UC-56\nDelete Tenant" as UC56
    usecase "UC-57\nUpload CCCD" as UC57
  }

  package "Service Management" {
    usecase "UC-58\nCreate Service" as UC58
    usecase "UC-59\nView Services" as UC59
    usecase "UC-60\nUpdate Service" as UC60
    usecase "UC-61\nDelete Service\n(Soft)" as UC61
    usecase "UC-62\nSeed Default\nServices" as UC62
  }

  package "Transaction Management" {
    usecase "UC-63\nCreate Transaction" as UC63
    usecase "UC-64\nView Transactions" as UC64
    usecase "UC-65\nView Transaction\nDetail" as UC65
    usecase "UC-66\nView Transaction\nStats" as UC66
  }

  package "Issue Management" {
    usecase "UC-67\nReport Issue" as UC67
    usecase "UC-68\nView Issues" as UC68
    usecase "UC-69\nView Issue Detail" as UC69
    usecase "UC-70\nUpdate Issue Status" as UC70
    usecase "UC-71\nResolve Issue" as UC71
  }

  ' Internal use cases
  usecase "Validate No\nActive Contract" as ValidateNoContract
  usecase "Upload to Cloudinary" as UploadCloud
  usecase "Generate Transaction\nCode" as GenTxnCode

}

